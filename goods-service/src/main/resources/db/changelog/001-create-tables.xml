<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="001" author="developer">

        <!-- Таблица categories -->
        <createTable tableName="categories">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="text"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
        </createTable>

        <!-- Индекс categories -->
        <createIndex tableName="categories" indexName="idx_category_name">
            <column name="name"/>
        </createIndex>

        <!-- Таблица products -->
        <createTable tableName="products">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="brand" type="varchar(100)"/>
            <column name="code" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="stock_quantity" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
        </createTable>

        <!-- Индексы products -->
        <createIndex tableName="products" indexName="idx_product_name">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="products" indexName="idx_product_category">
            <column name="category_id"/>
        </createIndex>
        <createIndex tableName="products" indexName="idx_product_brand">
            <column name="brand"/>
        </createIndex>
        <createIndex tableName="products" indexName="idx_product_code">
            <column name="code"/>
        </createIndex>
        <createIndex tableName="products" indexName="idx_product_price">
            <column name="price"/>
        </createIndex>

        <!-- Таблица product_images -->
        <createTable tableName="product_images">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="is_primary" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Индексы product_images -->
        <createIndex tableName="product_images" indexName="idx_image_product">
            <column name="product_id"/>
        </createIndex>
        <createIndex tableName="product_images" indexName="idx_image_primary">
            <column name="is_primary"/>
        </createIndex>

        <!-- Таблица product_reviews -->
        <createTable tableName="product_reviews">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="text"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Индексы product_reviews -->
        <createIndex tableName="product_reviews" indexName="idx_review_product">
            <column name="product_id"/>
        </createIndex>
        <createIndex tableName="product_reviews" indexName="idx_review_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="product_reviews" indexName="idx_review_rating">
            <column name="rating"/>
        </createIndex>

        <!-- Внешние ключи -->
        <addForeignKeyConstraint
                constraintName="fk_product_category"
                baseTableName="products"
                baseColumnNames="category_id"
                referencedTableName="categories"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="fk_image_product"
                baseTableName="product_images"
                baseColumnNames="product_id"
                referencedTableName="products"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="fk_review_product"
                baseTableName="product_reviews"
                baseColumnNames="product_id"
                referencedTableName="products"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <!-- Rollback: порядок удаления -->
        <rollback>
            <!-- Удаляем FK сначала -->
            <dropForeignKeyConstraint
                    constraintName="fk_review_product"
                    baseTableName="product_reviews"/>
            <dropForeignKeyConstraint
                    constraintName="fk_image_product"
                    baseTableName="product_images"/>
            <dropForeignKeyConstraint
                    constraintName="fk_product_category"
                    baseTableName="products"/>
            <!-- Затем удаляем таблицы -->
            <dropTable tableName="product_reviews"/>
            <dropTable tableName="product_images"/>
            <dropTable tableName="products"/>
            <dropTable tableName="categories"/>
        </rollback>
    </changeSet>
</databaseChangeLog>