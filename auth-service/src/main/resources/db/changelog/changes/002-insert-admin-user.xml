<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-1" author="Plastinin">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM users WHERE username = 'Admin'
            </sqlCheck>
        </preConditions>
        <insert tableName="users">
            <column name="user_id" valueComputed="gen_random_uuid()"/>
            <column name="username" value="Admin"/>
            <column name="email" value="admin@e-commerce.com"/>
            <column name="password" value="$2a$10$7UqQ28Vnkfhbu63kro1vGObSzTfJM./Eo.4QvYkwmQpSfIKdNH8d."/> <!--StrongPassword123ForAdmin-->
            <column name="created_at" valueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" value="null"/>
        </insert>
    </changeSet>
</databaseChangeLog>